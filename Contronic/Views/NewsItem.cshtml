@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.NewsItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Layout.cshtml";
}

 <!-- Page Content -->
<div class="container">
    <div class="row">
        <h1 class="page-header">
            @Model.Content.GetPropertyValue("heading")

        </h1>
      
        <!-- Author -->
        <p class="lead">
            by Arne Lund Mogensen
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.Content.CreateDate</p>
        <hr>

        <!-- Post Content -->
        <p class="lead"> @Model.Content.GetPropertyValue("text")   </div>
</div>
</div>