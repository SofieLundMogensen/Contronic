@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Datasheets>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-11 col-sm-offset-1">
            <br />
            <h1 class="inst-header text-center">@Umbraco.Field("heading")</h1>
            <p>@Umbraco.Field("txt")</p>

        </div>

    </div>
  
    <div class="row">
       
            @foreach (var datasheet in Model.Content.Children())
            { <div class="col-sm-6">
                <h2> @datasheet.GetPropertyValue("heading")</h2>
                @foreach (var pdf in datasheet.Children())
                {
                <p><a href="@pdf.GetPropertyValue("pdf")">@pdf.GetPropertyValue("heading")</a></p>
                }
            </div>
            }
          
        </div>
    </div>

